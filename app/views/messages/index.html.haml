.chat.clearfix

  = render partial: "shered/side_bar"

  .main
    .main__chat-group.clearfix
      .main__chat-group-name
        group name
      .main__chat-group__edit-button#edit-button
        = link_to "EDIT", edit_group_path(current_user)
      .main__chat-group__members
        Members:


    .main__message.clearfix
      .main__message-content

        .main__message-content__box
          .main__message-content__box__user-name
            main user name
          .main__message-content__box__time
            2018/11/12 00:00
          .main__message-content__box__text
            main message text



      .message__send
        .message__send__typefield
          text type field
          .message__send__typefield__icon
            %i.far.fa-image.fa-lg
        .message__send__button
          Send


