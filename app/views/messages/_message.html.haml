
.main__message-content__box{"data-id": "#{message.id}"}
  .main__message-content__box__user-name
    = message.user.name
  .main__message-content__box__time
    = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
  .main__message-content__box__text
    - if message.body.present?
      %p.lower-message__content
        = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

